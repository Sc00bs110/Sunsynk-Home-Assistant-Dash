    lambda: |-
      return (id(sunsynk_esphome_pv1_power).state + id(sunsynk_esphome_pv2_power).state);
    update_interval: 5s

  - platform: template                   # Slave Sum of PV1 and PV2 to get total PV Power
    name: "${friendly_name} Slave Solar Power"
    unit_of_measurement: "W"
    accuracy_decimals: 0
    device_class: power
    state_class: measurement
    lambda: |-
      return (id(slave_sunsynk_esphome_pv1_power).state + id(slave_sunsynk_esphome_pv2_power).state);
