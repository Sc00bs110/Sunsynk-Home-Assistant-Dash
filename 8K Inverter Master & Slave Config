substitutions:
  settings_skipped_updates: "30"
  devicename: sunsynk
  device_description: "Sunsynk RS485 Logger"
  friendly_name: "SunSynk"

esphome:
  name: XXXXXXXXXXX
  comment: Sunsynk
  
esp32:
  board: esp32dev
  framework:
    type: arduino

# Enable logging
logger:
  #baud_rate: 0

# Enable Home Assistant API
api:
  encryption:
    key: "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

ota:
  #password: !secret ota_password_sunsynk

wifi:
  ssid: !secret wifi_ssid
  password: !secret wifi_password

  # Enable fallback hotspot (captive portal) in case wifi connection fails
  ap:
    ssid: "XXXXXXXXXXXXXXXXXX"
    password: "XXXXXXXXXXXXXXX"

  fast_connect: true
  power_save_mode: none

captive_portal:

# Enable time component to reset energy at midnight
# https://esphome.io/components/time.html#home-assistant-time-source
time:
  - platform: homeassistant
    id: homeassistant_time
     
uart:
  id: mod_bus
  tx_pin: GPIO17
  rx_pin: GPIO16
  baud_rate: 9600
  stop_bits: 1
 
modbus:
  id: sunsynk_modbus
  flow_control_pin: GPIO4

 
modbus_controller:
  - id: sunsynk
    address: 0x01
    modbus_id: sunsynk_modbus
    setup_priority: -10
    update_interval: "15s"
    command_throttle: "50ms"
  - id: slave
    address: 0x02
    modbus_id: sunsynk_modbus
    setup_priority: -10
    update_interval: "15s"
    command_throttle: "50ms"

############################################### BINARY SENSORS ########################################
binary_sensor:           
  - platform: modbus_controller            # 194 Grid Connected Status
    modbus_controller_id: sunsynk
    name: "${friendly_name} Grid Connected Status"
    id: sunsynk_esphome_grid_connected_status
    register_type: holding
    address: 194

  - platform: modbus_controller            # 194 Slave Grid Connected Status
    modbus_controller_id: slave
    name: "${friendly_name} Slave Grid Connected Status"
    id: slave_sunsynk_esphome_grid_connected_status
    register_type: holding
    address: 194

  - platform: modbus_controller           # 280 Gen Peak Shaving Status
    modbus_controller_id: sunsynk
    name: "${friendly_name} Gen Peak Shaving Status"
    id: sunsynk_esphome_gen_peak_shaving_status
    register_type: holding
    address: 280
    bitmask: 0x10

  - platform: modbus_controller           # 280 Slave Gen Peak Shaving Status
    modbus_controller_id: slave
    name: "${friendly_name} Slave Gen Peak Shaving Status"
    id: slave_sunsynk_esphome_gen_peak_shaving_status
    register_type: holding
    address: 280
    bitmask: 0x10

  - platform: modbus_controller           # 280 Grid Peak Shaving Status
    modbus_controller_id: sunsynk
    name: "${friendly_name} Grid Peak Shaving Status"
    id: sunsynk_esphome_grid_peak_shaving_status
    register_type: holding
    address: 280
    bitmask: 0x100

  - platform: modbus_controller           # 280 Slave Grid Peak Shaving Status
    modbus_controller_id: slave
    name: "${friendly_name} Slave Grid Peak Shaving Status"
    id: slave_sunsynk_esphome_grid_peak_shaving_status
    register_type: holding
    address: 280
    bitmask: 0x100

